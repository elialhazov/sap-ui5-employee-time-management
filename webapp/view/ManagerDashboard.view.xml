<mvc:View
    controllerName="employeetimemanagement.controller.ManagerDashboard"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    displayBlock="true">

    <Page class="managerPage">

        <!-- ===== HEADER ===== -->
        <customHeader>
            <Bar class="appHeader">

                <contentLeft>
                    <Title
                        text="MANAGER DASHBOARD"
                        level="H2"
                        class="headerTitle"/>
                </contentLeft>

                <contentRight>
                    <HBox alignItems="Center" gap="1rem">
                        <Text
                            text="{= 'Hello ' + ${user>/name} }"
                            class="headerGreeting"/>

                        <Button
                            text="Manage Clients"
                            icon="sap-icon://business-objects-experience"
                            type="Emphasized"
                            press=".onManageClients"/>
                    </HBox>
                </contentRight>

            </Bar>
        </customHeader>

        <content>

            <!-- ===== EMPLOYEE CARDS ===== -->
            <FlexBox
                wrap="Wrap"
                class="employeeGrid"
                items="{/EmployeeSet}">

                <items>
                    <VBox class="employeeCard">

                        <!-- Card Header -->
                        <HBox justifyContent="SpaceBetween" alignItems="Center">
                            <Text
                                text="{Name}"
                                class="employeeName"/>

                            <core:Icon
                                src="sap-icon://employee"
                                size="1.5rem"
                                class="employeeIcon"/>
                        </HBox>

                        <!-- Employee ID -->
                        <Text
                            text="Employee ID: {EmployeeId}"
                            class="employeeId"/>

                        <!-- Actions -->
                        <HBox class="employeeActions">
                            <Button
                                text="Time Records"
                                icon="sap-icon://inspect"
                                type="Emphasized"
                                press=".onViewEmployee"/>

                            <Button
                                icon="sap-icon://key"
                                tooltip="Client Permissions"
                                press=".onAssignClients"/>
                        </HBox>

                    </VBox>
                </items>

            </FlexBox>

        </content>
    </Page>
</mvc:View>
